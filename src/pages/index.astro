---
const featuredImage = "https://res.cloudinary.com/dptj6itrl/image/upload/v1747527592/A_cluttered_desk_bathed_in_warm_lamplight_scattered_kzmtmj.png";
import Navbar from '../components/Navbar.astro';
---

<html>
  <head>
	<script>
  // Disable right-click on all images
  window.addEventListener('DOMContentLoaded', () => {
    document.addEventListener('contextmenu', e => {
      if (e.target.tagName === 'IMG') {
        e.preventDefault();
      }
    });
  });
</script>

    <title>ArcanumArt | AI-Generated Gallery</title>
  </head>
 <body>
  <div class="hero-bg">
    <Navbar />
    <main>
  		<h1 class="fade">Arcanum Art Inc</h1>
  		<p class="fade delay1">Imagination, rendered.</p>
  		<a class="cta fade delay2" id="enter-gallery">Enter the Gallery</a>
	</main>
  </div>
  <script>
  const link = document.getElementById('enter-gallery');
  if (link) {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      document.body.classList.add('fade-out');
      setTimeout(() => {
        window.location.href = '/gallery';
      }, 500);
    });
  }
</script>
</body>

  <style>
  body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: 'Georgia', serif;
    color: white;
  }

  body.fade-out {
  animation: fadeOut 0.5s ease-out forwards;
}

  .hero-bg {
    position: relative;
    height: 100vh;
    background-image: url("https://res.cloudinary.com/dptj6itrl/image/upload/v1747527592/A_cluttered_desk_bathed_in_warm_lamplight_scattered_kzmtmj.png");
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .hero-bg::before {
    content: "";
    position: absolute;
    inset: 0;
    backdrop-filter: blur(12px) brightness(0.6);
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 0;
  }

  main {
    position: relative;
    z-index: 1;
    max-width: 600px;
    padding: 2rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    letter-spacing: 1px;
  }

  p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: #f0e8dd;
  }

  .cta {
    display: inline-block;
    background: #b35b1f;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.3s ease;
  }

  .cta:hover {
    background: #944814;
  }

  @keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade {
  opacity: 0;
  animation: fadeInUp 1s ease-out forwards;
}

.delay1 {
  animation-delay: 0.3s;
}

.delay2 {
  animation-delay: 0.6s;
}

@keyframes fadeOut {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
</style>
</html>